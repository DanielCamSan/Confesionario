<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:gravity="start"
    android:orientation="vertical"
    android:background="@drawable/shape_card_publication">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="133dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="Titulo"
                        android:textColor="@color/publication_card_title"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/userText"
                        android:layout_width="96dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="15dp"
                        android:text="usuario"
                        android:textColor="@color/publication_card_gris" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="202dp"
                    android:layout_height="66dp"
                    android:baselineAligned="false"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/categoryText"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:gravity="right"
                        android:text="Categoria"
                        android:textColor="@color/publication_card_category"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/numberText"
                        android:layout_width="207dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:gravity="right"
                        android:text="Confesion #n"
                        android:textColor="@color/publication_card_gris" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="371dp"
                    android:layout_height="56dp"
                    android:gravity="center"
                    android:text="Esta es la descripcion de la publicacion"
                    android:textColor="@color/publication_card_text"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <LinearLayout
                    android:layout_width="223dp"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="134dp"
                        android:layout_height="29dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="22/22/2222"
                        android:textColor="@color/publication_card_gris" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="151dp"
                    android:layout_height="51dp"
                    android:gravity="center|right|center_horizontal">

                    <TextView
                        android:id="@+id/numberComentariesText"
                        android:layout_width="45dp"
                        android:layout_height="31dp"
                        android:gravity="center"
                        android:text="n"
                        android:textColor="@color/publication_card_gris" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="41dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="25dp"
                        android:background="#A38A8A" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

