<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:gravity="start"
    android:orientation="vertical"
    android:background="@drawable/shape_card_publication">

    <androidx.cardview.widget.CardView
        android:id="@+id/publication_card"
        android:layout_width="409dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="419dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:maxHeight="70dp"
                        android:text="Titulo"
                        android:textColor="@color/primary_blue"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/userText"
                        android:layout_width="194dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:maxHeight="40sp"
                        android:text="usuario"
                        android:textColor="@color/publication_card_gris"
                        android:textSize="14sp"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="right|left|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/categoryText"
                        android:layout_width="144dp"
                        android:layout_height="29dp"
                        android:layout_marginEnd="25dp"
                        android:gravity="right|center_vertical"
                        android:text="Categoria"
                        android:textColor="@color/publication_card_category"
                        android:textSize="14sp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/numberText"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:gravity="right"
                        android:text="Confesion #n"
                        android:textColor="@color/publication_card_gris"
                        android:textSize="14sp"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="369dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxHeight="90dp"
                    android:text="Esta es la descripcion de la publicacion"
                    android:textColor="@color/publication_card_text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_width="209dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="134dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="22/22/2222"
                        android:textColor="@color/publication_card_gris"
                        android:textSize="14sp"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="152dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right|center_horizontal">

                    <TextView
                        android:id="@+id/commentaries"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="14sp"
                        android:textColor="@color/publication_card_gris" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="34dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/commentaries" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

