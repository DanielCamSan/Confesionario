<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:gravity="start"
    android:orientation="vertical"
    android:background="@drawable/shape_card_publication">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="133dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="Titulo"
                        android:textColor="@color/publication_card_title"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/userText"
                        android:layout_width="96dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="15dp"
                        android:text="usuario"
                        android:textColor="@color/publication_card_gris"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/categoryText"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:gravity="right"
                        android:text="Categoria"
                        android:textColor="@color/publication_card_category"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/numberText"
                        android:layout_width="207dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:gravity="right"
                        android:text="Confesion #n"
                        android:textColor="@color/publication_card_gris"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="369dp"
                    android:layout_height="38dp"
                    android:gravity="center"
                    android:text="Esta es la descripcion de la publicacion"
                    android:textColor="@color/publication_card_text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <LinearLayout
                    android:layout_width="209dp"
                    android:layout_height="42dp"
                    android:gravity="center_horizontal|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="134dp"
                        android:layout_height="29dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="22/22/2222"
                        android:textColor="@color/publication_card_gris"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="152dp"
                    android:layout_height="42dp"
                    android:gravity="center|right|center_horizontal">

                    <TextView
                        android:id="@+id/numberComentariesText"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="n"
                        android:textColor="@color/publication_card_gris" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="40dp"
                        android:layout_height="42dp"
                        android:layout_marginEnd="25dp"
                        tools:srcCompat="@drawable/commentaries_logo" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

